@page "/main"
@using System.Text.Json
@layout LogoHeader
@inject IJSRuntime JSRuntime
@inject SupabaseInterop Supabase

<link href="MainPage.razor.css" rel="stylesheet" />
<div class="icon-container">
    <span class="material-symbols-outlined" @onclick="() => OpenPopup(PopupType.CreatePost)">add</span>
    <span class="material-symbols-outlined" @onclick="() => OpenPopup(PopupType.Menu)">menu</span>
</div>

@if (activePopup != null)
{
    <div class="popup-overlay">
        <div class="popup-container" @onclick:stopPropagation="true" @onscroll:stopPropagation="true">
            @if (activePopup == PopupType.CreatePost)
            {
                <div class="create-container">
                    <div class="name-date">
                        <h3>name</h3>
                        <p>timestamp</p>
                    </div>
                    <p>the texts go over here.</p>
                    <p @onclick="ClosePopup">submit.</p>
                </div>
            }
            else if (activePopup == PopupType.Menu)
            {
                //
            }
            
        </div>
    </div>
}

